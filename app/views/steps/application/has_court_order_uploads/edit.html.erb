<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.page_title') %></h1>

    <h2 class="govuk-heading-m"><%= t('.lead_text') %></h2>

    <p class=".govuk-body"><%= t('.secondary_text') %></p>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>

      <%= f.govuk_collection_radio_buttons :has_court_order_uploads, GenericYesNo.values,
      :value, nil, legend: { tag: 'span', size: 'm', hidden: true } %>

      <%= f.continue_button %>
    <% end %>

  </div>
</div>