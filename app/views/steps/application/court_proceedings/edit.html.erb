<% title t('.page_title') %>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= step_header %>
    <p class="app__section_heading"><%=t '.section' %></p>

    <h1 class="heading-xlarge gv-u-heading-xxlarge"><%=t '.heading' %></h1>

    <%= step_form @form_object do |f| %>
      <%= f.text_area :children_names, size: '40x4', class: 'form-control-3-4' %>
      <%= f.text_field :court_name %>
      <%= f.text_field :case_number %>

      <div role="note" class="panel panel-border-wide info-notice">
        <p><%=t '.case_number_info' %></p>
      </div>

      <%= f.text_field :proceedings_date %>
      <%= f.text_area :cafcass_details, size: '40x4', class: 'form-control-3-4' %>
      <%= f.text_area :order_types, size: '40x4', class: 'form-control-3-4' %>
      <%= f.text_area :previous_details, size: '40x4', class: 'form-control-3-4' %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
