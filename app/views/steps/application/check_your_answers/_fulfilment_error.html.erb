<dl id="error_steps_application_declaration_form_c100_application_attributes_<%= error.attribute %>">
  <dt>
    <%= error.message %>
  </dt>
  <dd class="change">
    <%# We only show the link in the first error, in case there are more than one %>
    <%= link_to t('.change_link'), error.change_path,
                class: 'ga-pageLink govuk-link--no-visited-state',
                data: {
                  ga_category: 'check your answers',
                  ga_label: "fulfilment error: #{error.attribute}"
                } if error_counter.zero? %>
  </dd>
</dl>
