<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-xl"><%=t '.heading' %></h1>

    <p class="govuk-body"><%=t '.lead_text' %></p>
    <%=t '.examples_html' %>


    <div class="govuk-inset-text">
      <%= t '.warning' %>
    </div>

    <details class="govuk-details" data-module="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text" data-ga-category="explanations" data-ga-label="urgent hearing"><%=t '.reasons_title' %></span>
      </summary>
      <div class="govuk-details__text">
        <%=t '.reasons_content_html' %>
      </div>
    </details>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_collection_radio_buttons :urgent_hearing, GenericYesNo.values, :value, nil, legend: { text: t('.heading'), tag: 'span', size: 's', hidden: true } %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
