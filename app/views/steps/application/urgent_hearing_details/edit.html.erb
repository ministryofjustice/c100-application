<% title t('.page_title') %>
<% step_header %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-xl"><%=t '.heading' %></h1>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_text_area :urgent_hearing_details %>
      <%= f.govuk_text_field :urgent_hearing_when %>

      <div class="govuk-inset-text">
        <%= t '.court_info_html' %>
      </div>

      <%= f.govuk_radio_buttons_fieldset :urgent_hearing_short_notice, legend: { tag: 'span', size: 'm' } do %>
        <%= f.govuk_radio_button :urgent_hearing_short_notice, GenericYesNo::YES, link_errors: true %>
        <%= f.govuk_radio_button :urgent_hearing_short_notice, GenericYesNo::NO do%>
          <%= f.govuk_text_area :urgent_hearing_short_notice_details %>
        <% end %>
      <% end %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
