<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-xl"><%=t '.heading' %></h1>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_text_area :participation_capacity_details %>
      <%= f.govuk_text_area :participation_other_factors_details %>
      <%= f.govuk_text_area :participation_referral_or_assessment_details %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
