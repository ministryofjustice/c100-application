<% title t('.page_title') %>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= step_header %>
    <p class="app__section_heading"><%=t '.section' %></p>

    <h1 class="app__heading heading-xlarge gv-u-heading-xxlarge"><%=t '.heading' %></h1>

    <div class="miam_exemptions">
    <%= step_form @form_object do |f| %>
      <%=
        f.check_box_fieldset :urgency_exemptions, [
          UrgencyExemptions::RISK_APPLICANT,
          UrgencyExemptions::UNREASONABLE_HARDSHIP,
          UrgencyExemptions::GROUP_RISK,
          UrgencyExemptions::MISCARRIAGE_JUSTICE,
          UrgencyExemptions::IRRETRIEVABLE_PROBLEMS,
          UrgencyExemptions::INTERNATIONAL_PROCEEDINGS
        ] do |fieldset|
          fieldset.check_box_input(UrgencyExemptions::RISK_APPLICANT)
          fieldset.check_box_input(UrgencyExemptions::UNREASONABLE_HARDSHIP)
          fieldset.check_box_input(UrgencyExemptions::GROUP_RISK) {
            f.check_box_fieldset :exemptions_group, UrgencyExemptions::RISK
          }
          fieldset.check_box_input(UrgencyExemptions::MISCARRIAGE_JUSTICE)
          fieldset.check_box_input(UrgencyExemptions::IRRETRIEVABLE_PROBLEMS)
          fieldset.check_box_input(UrgencyExemptions::INTERNATIONAL_PROCEEDINGS)
        end
      %>

      <p class="form-block or-block"><%=t '.or' %></p>

      <%= f.check_box_fieldset :exemptions_group, [UrgencyExemptions::URGENCY_NONE] %>

      <%= f.continue_button %>
    <% end %>
    </div
  </div>
</div>
