<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-xl"><%=t '.heading' %></h1>

    <%=t '.info_html' %>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_text_area :exemption_reasons, rows: 8, label: { hidden: true } %>

      <%= f.govuk_radio_buttons_fieldset :attach_evidence, legend: { text: "#{t '.attach_evidence' }", size: 'm' } do %>
        <%= f.govuk_radio_button :attach_evidence, GenericYesNo::YES %>
        <%= f.govuk_radio_button :attach_evidence, GenericYesNo::NO do %>
          <% unless current_c100_application.miam_exemption.domestic.include? 'misc_domestic_none' %>
            <div class="govuk-warning-text">
              <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
              <strong class="govuk-warning-text__text">
                <%=t '.alert_text' %>
              </strong>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <%= f.continue_button %>
    <% end %>
  </div>
</div>