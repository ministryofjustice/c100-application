<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>
    <h1 class="govuk-heading-l"><%= t('.heading') %></h1>
    <h2 class="govuk-body-m"><%= t('.lead_text') %></h2>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_radio_buttons_fieldset :has_myhmcts_account, legend: { size: 'm' } do %>
        <%= f.govuk_radio_button :has_myhmcts_account, GenericYesNo::YES, hint: { size: 'm' } %>
        <%= f.govuk_radio_button :has_myhmcts_account, GenericYesNo::NO, hint: { size: 'm' } %>
      <% end %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
