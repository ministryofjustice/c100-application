<% title t('.page_title') %>
<% heading = t(".heading", count: current_c100_application.applicants.count) %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_collection_radio_buttons :has_solicitor, GenericYesNo.values, :value, nil, legend: { text: heading } do %>
        <p class="govuk-body"><%= t('.lead_text') %></p>
      <% end %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
