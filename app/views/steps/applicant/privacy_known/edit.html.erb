<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary %>

    <h1 class="govuk-heading-xl"><%=t '.heading' %></h1>

    <%= step_form @form_object, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_collection_radio_buttons :privacy_known, GenericYesNoUnknown.values, :value, nil, legend: { tag: 'span', size: 's' } %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
