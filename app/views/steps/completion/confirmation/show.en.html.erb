<% title 'Application submitted' %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-panel govuk-panel--confirmation">
      <h1 class="govuk-panel__title">
        Your application has been submitted
      </h1>
      <div class="govuk-panel__body">
        <span class="app-util--no-wrap">Your reference code is:</span>
        <strong><%= @c100_application.reference_code %></strong>
      </div>
    </div>

    <p class="govuk-body-l govuk-!-margin-top-6">
      Your application has been sent to <%= @court.name %>.

      <% if @c100_application.receipt_email? %>
        Weâ€™ve emailed a confirmation of this with a copy of your application to
        <strong><%= @c100_application.receipt_email %></strong>
      <% end %>
    </p>

    <h2 class="govuk-heading-l">Pay the application fee</h2>
    <%= render partial: 'steps/shared/payment_instructions', locals: {
      c100_application: @c100_application
    } %>

    <%= render partial: 'under_age_section' if @c100_application.applicants.under_age? %>

    <h2 class="govuk-heading-l">Download a copy of your application</h2>
    <p class="govuk-body">
      This will be a PDF. If you cannot open the PDF after downloading, try using
      <a href="https://get.adobe.com/uk/reader/" class="govuk-link" rel="external" target="_blank">Adobe Acrobat Reader</a>.
    </p>

    <% unless user_signed_in? || @c100_application.receipt_email? %>
      <div class="govuk-inset-text">
        If you want to keep a copy, you must download it now. You cannot return to a submitted application.
      </div>
    <% end %>

    <%= link_button 'Download your PDF application', steps_completion_summary_path(format: :pdf), class: 'ga-pageLink',
                    data: { module: 'govuk-button', ga_category: 'completion', ga_label: 'download application' } %>

    <%= render partial: 'steps/shared/court_help', locals: {court: @court} %>

    <%= render partial: 'steps/shared/feedback' %>
  </div>
</div>
