<p class="govuk-body">
  <%= form.label(field_name, label_text, id: [
      'error', form.object.class.name.underscore.tr('/', '_'), field_name
  ].join('_'), for: [form.object.class.name, field_name, 'field'].join('-').underscore.dasherize.tr('/', '-')) %>
</p>

<p class="govuk-body">
  <%= paragraph_text %>
</p>

<div class="govuk-grid-row uploader-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-drop-zone" data-module="govuk-file-upload">
      <%= form.govuk_file_field(field_name, label: { text: t('shared.file_upload.select_file') }, class: 'govuk-file-upload single-file-upload', accept: DocumentUpload::ALLOWED_CONTENT_TYPES.join(','), src: 'camera',
        onchange: "validateFiles(this);",
        data: { max_file_size: 20.megabytes }) %
  </div>
</div>

<%= render partial: 'steps/shared/document_upload/file_upload_requirements' %>
