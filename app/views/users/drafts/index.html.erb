<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">
      <%=t '.heading' %>
    </h1>

    <div class="govuk-inset-text">
      <%=t '.submit_info' %>
    </div>

    <table class="govuk-table app-saved-drafts">
      <caption class="govuk-table__caption govuk-visually-hidden">
        <%=t '.table.caption' %>
      </caption>

      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header app-util--no-wrap"><%=t '.table.heading.expires_in' %></th>
          <th scope="col" class="govuk-table__header"><%=t '.table.heading.applicant_name' %></th>
          <th scope="col" class="govuk-table__header govuk-table__header--numeric">
            <span class="govuk-visually-hidden"><%=t '.table.heading.actions' %></span>
          </th>
        </tr>
      </thead>

      <tbody class="govuk-table__body">
        <% @drafts.present_each(DraftPresenter) do |draft| %>
          <%= render partial: 'draft_row', locals: { draft: draft } %>
        <% end %>
      </tbody>
    </table>

    <p class="govuk-body">
      <%= link_to t('.new_application'), root_path(new: 'y'), class: 'ga-pageLink govuk-link govuk-!-margin-top-6',
                  data: { ga_category: 'save and return', ga_label: 'new application' } %>
    </p>
  </div>
</div>
